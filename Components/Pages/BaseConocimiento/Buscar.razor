@page "/conocimiento"
@using Proyecto.Application.DTOs.BaseConocimiento
@using Proyecto.Application.Interfaces
@inject IBaseConocimientoService BaseConocimientoService
@inject ISessionService SessionService
@inject NavigationManager Navigation

<PageTitle>Base de Conocimiento</PageTitle>

@if (cargando)
{
    <p><em>Cargando...</em></p>
}
else if (!tieneAcceso)
{
    <div class="alert alert-danger">
        <h4>Acceso Denegado</h4>
        <p>No tienes permisos para acceder a la base de conocimiento. Esta sección es solo para técnicos y administradores.</p>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/incidentes/crear")'>
            Ir a Crear Incidente
        </button>
    </div>
}
else
{
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Base de Conocimiento</h3>
            <button class="btn btn-success" @onclick="IrACrear">
                <i class="bi bi-plus-circle"></i> Nueva Solución
            </button>
        </div>
    
    <div class="row mt-3">
        <div class="col-md-8">
            <input type="text" class="form-control" 
                   placeholder="Buscar por palabras clave..."
                   @bind="textoBusqueda"
                   @bind:event="oninput" />
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary w-100" @onclick="RealizarBusqueda">
                Buscar
            </button>
        </div>
    </div>
    
    <!-- Resultados -->
    @if (articulos != null)
    {
        <div class="row mt-4">
            @foreach (var articulo in articulos)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-header">
                            <strong>@articulo.Titulo</strong>
                        </div>
                        <div class="card-body">
                            <p>@articulo.Descripcion</p>
                            <div class="mb-2">
                                @foreach (var etiqueta in articulo.Etiquetas)
                                {
                                    <span class="badge bg-info me-1"><i class="fas fa-tag me-1"></i>@etiqueta</span>
                                }
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-eye me-1"></i>Consultado @articulo.VecesConsultada veces
                            </small>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <button class="btn btn-sm btn-primary" 
                                    title="Ver solución completa"
                                    @onclick="() => VerSolucion(articulo)">
                                <i class="fas fa-book-open me-1"></i>Ver Solución
                            </button>
                            @if (nivelUsuario == 5)
                            {
                                <button class="btn btn-sm btn-danger" 
                                        title="Eliminar artículo"
                                        @onclick="() => MostrarConfirmacionEliminar(articulo)">
                                    <i class="fas fa-trash me-1"></i>Eliminar
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    </div>
}

<!-- Modal Ver Solución -->
@if (mostrarModalSolucion && articuloSeleccionado != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="fas fa-book-open me-2"></i>@articuloSeleccionado.Titulo</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModales"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <h6><i class="fas fa-info-circle me-1"></i>Descripción:</h6>
                        <p>@articuloSeleccionado.Descripcion</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6><i class="fas fa-check-circle me-1"></i>Solución:</h6>
                        <div class="bg-light p-3 rounded">
                            <p style="white-space: pre-wrap;">@articuloSeleccionado.Solucion</p>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <h6><i class="fas fa-tags me-1"></i>Etiquetas:</h6>
                        @foreach (var etiqueta in articuloSeleccionado.Etiquetas)
                        {
                            <span class="badge bg-info me-1"><i class="fas fa-tag me-1"></i>@etiqueta</span>
                        }
                    </div>
                    
                    <div>
                        <small class="text-muted">
                            <i class="fas fa-eye me-1"></i>Consultado @articuloSeleccionado.VecesConsultada veces
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModales">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal Confirmar Eliminación -->
@if (mostrarModalEliminar && articuloSeleccionado != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModales"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro que deseas eliminar este artículo?</p>
                    <div class="alert alert-warning">
                        <strong>Título:</strong> @articuloSeleccionado.Titulo<br />
                        <small>Esta acción no se puede deshacer.</small>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(mensajeEliminar))
                    {
                        <div class="alert @(mensajeEliminarExito ? "alert-success" : "alert-danger")">
                            @mensajeEliminar
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModales">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="EliminarArticulo">
                        <i class="fas fa-trash me-1"></i>Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<BaseConocimientoDto>? articulos;
    private string textoBusqueda = string.Empty;
    private bool cargando = true;
    private bool tieneAcceso = false;
    private int nivelUsuario = 0;
    private bool mostrarModalSolucion = false;
    private bool mostrarModalEliminar = false;
    private BaseConocimientoDto? articuloSeleccionado;
    private string? mensajeEliminar;
    private bool mensajeEliminarExito = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var usuario = await SessionService.GetUsuarioActualAsync();
            
            if (usuario == null)
            {
                Navigation.NavigateTo("/login");
                return;
            }
            
            nivelUsuario = usuario.Nivel;
            tieneAcceso = usuario.Nivel >= 1;
            cargando = false;
            
            if (tieneAcceso)
            {
                await BuscarArticulos();
            }
            
            StateHasChanged();
        }
    }

    private async Task RealizarBusqueda()
    {
        await BuscarArticulos();
    }

    private async Task BuscarArticulos()
    {
        var dto = new BuscarBaseConocimientoDto
        {
            TextoBusqueda = textoBusqueda
        };
        
        var resultado = await BaseConocimientoService.BuscarAsync(dto);
        articulos = resultado.ToList();
    }

    private void IrACrear()
    {
        Navigation.NavigateTo("/base-conocimiento/crear");
    }

    private void IrACrearIncidente()
    {
        Navigation.NavigateTo("/incidentes/crear");
    }
    
    private async Task VerSolucion(BaseConocimientoDto articulo)
    {
        articuloSeleccionado = articulo;
        await BaseConocimientoService.IncrementarConsultasAsync(articulo.Id);
        mostrarModalSolucion = true;
    }
    
    private void MostrarConfirmacionEliminar(BaseConocimientoDto articulo)
    {
        articuloSeleccionado = articulo;
        mensajeEliminar = null;
        mostrarModalEliminar = true;
    }
    
    private async Task EliminarArticulo()
    {
        if (articuloSeleccionado == null) return;
        
        try
        {
            await BaseConocimientoService.EliminarAsync(articuloSeleccionado.Id);
            mensajeEliminar = "Artículo eliminado correctamente";
            mensajeEliminarExito = true;
            
            await Task.Delay(1500);
            CerrarModales();
            await BuscarArticulos();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            mensajeEliminar = $"Error al eliminar: {ex.Message}";
            mensajeEliminarExito = false;
        }
    }
    
    private void CerrarModales()
    {
        mostrarModalSolucion = false;
        mostrarModalEliminar = false;
        articuloSeleccionado = null;
        mensajeEliminar = null;
    }
}
