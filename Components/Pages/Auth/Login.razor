@page "/"
@page "/login"
@using Proyecto.Application.DTOs.Auth
@using Proyecto.Application.Interfaces
@inject IAuthService AuthService
@inject ISessionService SessionService
@inject NavigationManager Navigation

<PageTitle>Login - Sistema de Gestión de Incidentes</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mt-2">Sistema de Gestión de Incidentes</h4>
                    <small>Iniciar Sesión</small>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Email:</label>
                        <input type="text" class="form-control" @bind="email" 
                               placeholder="usuario@universidad.edu" />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Contraseña:</label>
                        <input type="password" class="form-control" @bind="password" />
                    </div>
                    
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    
                    <button type="button" class="btn btn-primary w-100" @onclick="HandleLogin" disabled="@procesando">
                        @if (procesando)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Ingresar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";
    private bool procesando = false;

    protected override void OnInitialized()
    {
        Console.WriteLine("[Login] Componente inicializado");
    }

    private async Task HandleLogin()
    {
        Console.WriteLine($"[Login] HandleLogin llamado - Email: {email}");
        
        if (procesando) return;
        
        procesando = true;
        errorMessage = "";
        StateHasChanged();
        
        try
        {
            var loginDto = new LoginDto { Email = email, Password = password };
            Console.WriteLine($"[Login] Llamando AuthService.LoginAsync");
            
            var response = await AuthService.LoginAsync(loginDto);
            
            if (response != null)
            {
                Console.WriteLine($"[Login] Login exitoso: {response.Email}, Nivel: {response.Nivel}");
                
                // Guardar en sesión usando método síncrono primero
                SessionService.SetUsuarioActual(response);
                Console.WriteLine("[Login] Usuario guardado en sesión (memoria)");
                
                // Luego intentar guardar en sessionStorage
                try
                {
                    await SessionService.SetUsuarioActualAsync(response);
                    Console.WriteLine("[Login] Usuario guardado en sessionStorage");
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"[Login] Error guardando en storage: {ex.Message}");
                }
                
                Console.WriteLine("[Login] Navegando a /incidentes");
                StateHasChanged(); // Forzar actualización del UI
                Navigation.NavigateTo("/incidentes", forceLoad: false);
            }
            else
            {
                Console.WriteLine("[Login] Credenciales incorrectas");
                errorMessage = "Credenciales incorrectas";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Login] Error: {ex.Message}");
            Console.WriteLine($"[Login] Stack: {ex.StackTrace}");
            errorMessage = $"Error al iniciar sesión: {ex.Message}";
        }
        finally
        {
            procesando = false;
            StateHasChanged();
        }
    }
}
