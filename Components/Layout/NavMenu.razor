@using Proyecto.Application.Interfaces
@using Proyecto.Application.DTOs.Auth
@inject ISessionService SessionService
@inject NavigationManager Navigation
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <span class="navbar-brand d-flex align-items-center" style="font-size: 0.95rem; cursor: default;">
            <i class="fas fa-tools me-2" style="font-size: 1.3rem; color: #ffc107;"></i>
            <span>Gestión de Incidentes y BD</span>
        </span>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (usuario != null)
        {
            @if (usuario.Nivel == 0)
            {
                <!-- Menú para Estudiantes -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="incidentes">
                        <span class="bi bi-clipboard-check-fill" aria-hidden="true"></span> Mis Incidentes
                    </NavLink>
                </div>
                
                <!-- Información del Usuario -->
                <div class="nav-item px-3 mt-auto">
                    <div class="d-flex align-items-center bg-dark bg-opacity-50 px-3 py-2 rounded">
                        <i class="fas fa-user-graduate me-2" style="font-size: 1.2rem; color: #17a2b8;"></i>
                        <div class="d-flex flex-column">
                            <span class="text-white fw-bold" style="font-size: 0.85rem;">@usuario.Nombre</span>
                            <small class="text-white-50" style="font-size: 0.7rem;">Estudiante</small>
                        </div>
                    </div>
                </div>
                
                <div class="nav-item px-3 mt-2">
                    <button class="btn btn-outline-danger w-100" @onclick="CerrarSesion">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Cerrar Sesión
                    </button>
                </div>
            }
            else
            {
                <!-- Menú para Técnicos y Administradores -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="incidentes">
                        <span class="bi bi-ticket-detailed-fill" aria-hidden="true"></span> Incidentes
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="conocimiento">
                        <span class="bi bi-lightbulb-fill" aria-hidden="true"></span> Base de Conocimiento
                    </NavLink>
                </div>
                
                <!-- Información del Usuario -->
                <div class="nav-item px-3 mt-auto">
                    <div class="d-flex align-items-center bg-dark bg-opacity-50 px-3 py-2 rounded">
                        @if (usuario.Nivel == 5)
                        {
                            <i class="fas fa-user-shield me-2" style="font-size: 1.2rem; color: #dc3545;"></i>
                        }
                        else
                        {
                            <i class="fas fa-user-cog me-2" style="font-size: 1.2rem; color: #28a745;"></i>
                        }
                        <div class="d-flex flex-column">
                            <span class="text-white fw-bold" style="font-size: 0.85rem;">@usuario.Nombre</span>
                            <small class="text-white-50" style="font-size: 0.7rem;">
                                @(usuario.Nivel == 5 ? "Administrador" : $"Técnico Nivel {usuario.Nivel}")
                            </small>
                        </div>
                    </div>
                </div>
                
                <div class="nav-item px-3 mt-2">
                    <button class="btn btn-outline-danger w-100" @onclick="CerrarSesion">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Cerrar Sesión
                    </button>
                </div>
            }
        }
        else
        {
            <!-- Menú cuando no está autenticado -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Iniciar Sesión
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private UsuarioResponseDto? usuario;
    private System.Threading.Timer? timer;

    protected override void OnInitialized()
    {
        // Timer para verificar sesión cada 500ms
        timer = new System.Threading.Timer(async _ => await VerificarSesion(), null, TimeSpan.Zero, TimeSpan.FromMilliseconds(500));
    }

    private async Task VerificarSesion()
    {
        try
        {
            var usuarioActual = await SessionService.GetUsuarioActualAsync();
            
            // Solo actualizar si cambió
            if ((usuario == null && usuarioActual != null) || (usuario != null && usuarioActual == null))
            {
                usuario = usuarioActual;
                if (usuario != null)
                {
                    Console.WriteLine($"[NavMenu] ✓ Usuario detectado: {usuario.Nombre}, Nivel: {usuario.Nivel}");
                    timer?.Dispose(); // Detener timer una vez que tenemos usuario
                }
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[NavMenu] Error verificando sesión: {ex.Message}");
        }
    }

    private async Task CerrarSesion()
    {
        await SessionService.ClearUsuarioActualAsync();
        usuario = null;
        
        // Reiniciar timer para detectar nuevo login
        timer = new System.Threading.Timer(async _ => await VerificarSesion(), null, TimeSpan.Zero, TimeSpan.FromMilliseconds(500));
        
        Navigation.NavigateTo("/login", forceLoad: false);
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
